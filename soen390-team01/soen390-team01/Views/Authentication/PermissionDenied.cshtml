@{
    ViewData["Title"] = "Permission Denied";
}
<head>
    <link rel="stylesheet" href="\css\Accounting.css">
    <link rel="stylesheet" href="\css\site.css">
    <title>Authentication</title>
</head>

<div class="container" style="margin-top: 20px; border: 1px solid red; border-radius: 10px;">
    <div class="row">
        <h1 class="text-danger" style="margin-left:20px">Permission Denied</h1>
    </div>
    <div class="row">
        <div class="col-12">
            <h4>You don't have the required permissions to access this module. Please contact your system administrator or login with a privileged account.</h4>
        </div>
    </div>
    <div class="row">
        <a class="nav-link" style="font-size:x-large" asp-controller="Authentication" asp-action="Logout">Switch Account</a>
    </div>
</div>
