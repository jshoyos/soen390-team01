@model soen390_team01.Services.IUserManagementService

@{
    ViewData["Title"] = "User Management";
    string[] TableHeader = new string[] { "Action", "First Name", "Last Name", "Role", "Phone Number", "Email" };
}
<head>
    <title>User Management</title>
    <link rel="stylesheet" href="\css\UserManagement.css">
</head>

<h1>User Management</h1>

<hr />

<div id="PlaceHolderHere" ></div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <form method="post" asp-controller="UserManagement" asp-action="AddUser">
                <div>
                    <label asp-for="AddUserModel.FirstName">First Name</label>
                    <input asp-for="AddUserModel.FirstName" class="form-control" />
                    <span asp-validation-for="AddUserModel.FirstName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="AddUserModel.LastName">Last Name</label>
                    <input asp-for="AddUserModel.LastName" class="form-control" />
                    <span asp-validation-for="AddUserModel.LastName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="AddUserModel.PhoneNumber">Phone Number</label>
                    <input asp-for="AddUserModel.PhoneNumber" class="form-control" />
                    <span asp-validation-for="AddUserModel.PhoneNumber" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="AddUserModel.Role">Role</label>
                    <select asp-for="AddUserModel.Role" asp-items="new SelectList(Enum.GetNames(typeof(Roles)))"></select>
                </div>
                <div>
                    <label asp-for="AddUserModel.Email"></label>
                    <input asp-for="AddUserModel.Email" class="form-control" />
                    <span asp-validation-for="AddUserModel.Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="AddUserModel.Password"></label>
                    <input asp-for="AddUserModel.Password" class="form-control" />
                    <span asp-validation-for="AddUserModel.Password" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="AddUserModel.ConfirmPassword">Confirm Password</label>
                    <input asp-for="AddUserModel.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="AddUserModel.ConfirmPassword" class="text-danger"></span>
                </div>
                <input class="btn btn-primary btn-lg" type="submit" value="Add User"/>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <div class="table">
            <table class="table table-bordered table-hover" aria-label="Tables">
                <tr>
                    @{
                        foreach (var head in TableHeader)
                        {
                            <th scope="col">@head</th>
                        }
                    }
                </tr>
                @{
                    var users = ViewData["Users"] as List<soen390_team01.Data.Entities.User>;
                    foreach (var user in Model.Users)
                    {
                        <tr id="@("userRow" + user.UserId)">
                            @{await Html.RenderPartialAsync("_UserRowPartial", user);}
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>