@using Newtonsoft.Json
@using soen390_team01.Data
@model List<soen390_team01.Data.Entities.Part>

<!--Desktop view-->
<table class="container userDesktop" id = "partTableCsv" aria-label="Parts">
    <tr>
        <th scope="col">ItemId</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Grade</th>
        <th scope="col">Size</th>
        <th scope="col">Added</th>
        <th scope="col">Updated</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td scope="col">@item.ItemId</td>
            <td scope="col">@item.Name</td>
            <td scope="col">@item.Price</td>
            <td scope="col">@item.Grade</td>
            <td scope="col">@item.Size</td>
            <td scope="col">@item.Added.DateTimeLocalString()</td>
            <td scope="col">@item.Updated.DateTimeLocalString()</td>
        </tr>
    }
</table>

<!--Mobile view-->
<table  class="table table-bordered table-hover userMobile" id="partTableCsv" aria-label="Parts">
    <tr>
        <th scope="col"></th>
        <th scope="col">ItemId</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
    </tr>
</table>

