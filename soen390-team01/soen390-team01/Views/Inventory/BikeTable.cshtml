@using Newtonsoft.Json
@using soen390_team01.Data
@model List<soen390_team01.Data.Entities.Bike>

<link rel="stylesheet" href="\css\Inventory.css">

@foreach (var item in Model)
{
<div id="@("BikePart-" + item.ItemId)">
    @{ await Html.RenderPartialAsync("BikePartList", item);}
</div>
    
}

<table class="table table-bordered table-hover" id="bikeTableCsv" aria-label="Bikes">
    <tr>
        <th scope="col">ItemId</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Grade</th>
        <th scope="col">Size</th>
        <th scope="col">Added</th>
        <th scope="col">Updated</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="idbutton" data-toggle="modal" data-target="@("#bikeParts-"+item.ItemId)" aria-hidden="true">@item.ItemId</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Grade</td>
            <td>@item.Size</td>
            <td>@item.Added.DateTimeLocalString()</td>
            <td>@item.Updated.DateTimeLocalString()</td>
        </tr>
    }

</table>

