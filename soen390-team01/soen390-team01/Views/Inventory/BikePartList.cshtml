@using Newtonsoft.Json
@using soen390_team01.Data
@model HashSet<soen390_team01.Data.Entities.BikePart>

<link rel="stylesheet" href="\css\Inventory.css">

<div class="modal fade" id="bikeParts" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <h5>Part List</h5> <br />
                <div class="row">
                    <table class="container" style="margin-left: 25%; margin-right: 25%;">
                        <tr class="row pt-4 pb-2 h-100 text-center">
                            <th class="col">ID</th>
                            <th class="col">Name</th>
                            <th class="col">Quantity</th>
                        </tr>
                        @foreach (var item  in Model)
                        {
                            <tr class="row pt-4 pb-4 h-100 text-center">
                                <td class="col">@item.PartId</td>
                            </tr>
                        }
                    </table>
                </div> 

                <div class="row justify-content-center mt-4">
                    <input type="text" name="partID" placeholder="Part ID" />
                    <button type="button" class="btn btn-primary ml-1 mr-1">Add</button>
                    <button type="button" class="btn btn-outline-primary">Remove</button>
                </div>
            </div>
        </div>
    </div>
</div>