@using Newtonsoft.Json
@using soen390_team01.Data
@model List<soen390_team01.Data.Entities.Payment>

<table class="table table-bordered table-hover" id="payableTableCsv" aria-label="pt" style="overflow: scroll;">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Status</th>
        <th scope="col">Value</th>
        <th scope="col">Added</th>
        <th scope="col">Updated</th>
    </tr>
    @foreach (var rec in Model)
    {
        <tr>
            <td scope="col">@rec.PaymentId</td>
            <td scope="col">@rec.State</td>
            <td scope="col">@rec.Amount</td>
            <td scope="col">@rec.Added.DateTimeLocalString()</td>
            <td scope="col">@rec.Updated.DateTimeLocalString()</td>
        </tr>
    }
</table>