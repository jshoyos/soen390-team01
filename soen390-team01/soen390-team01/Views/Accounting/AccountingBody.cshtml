@using Newtonsoft.Json
@{ViewData["Title"] = "Accounting View";}
@model soen390_team01.Services.IAccountingService

<html>
<head>
    <link rel="stylesheet" href="\css\Accounting.css">
    <link rel="stylesheet" href="\css\site.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <script>
        function changeTab(tab) {
            $.ajax({
                url: '@Url.Action("ChangeTab", "Accounting")',
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(tab),
                dataType: 'html',
                success: function (result) {
                    $('.accounting-view').html(result);
                }
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <button class="btn btn-outline-primary" data-toggle="modal" data-target="#filterModal" id="filter-button">FILTER</button>
            </div>
            <div class="col-8">
                <button class="btn btn-outline-primary" id="generateG-button" style=" font-size: 12px; margin: 1px; padding: 2px; width: 100%;">GENERATE GRAPH</button>
            </div>
        </div>
    </div>
    <div class="row">
        <!--Table with tabs-->
        <div class="col-lg-8 mx-lg-auto" id="LHS">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li style="width: 33.3%;text-align:center;">
                    <a class="nav-link" id="orderTab" data-toggle="pill" href="#allTabContent" role="tab" aria-controls="allTabContent" aria-selected="@(Model.SelectedTab == "payment" ? "true": "false")" onclick="changeTab('payment')">
                        All
                    </a>
                </li>
                <li class="nav-item" style="width: 33.3%; text-align:center;">
                    <a class="nav-link" id="procTab" data-toggle="pill" href="#payableTabContent" role="tab" aria-controls="payableTabContent" aria-selected="@(Model.SelectedTab == "payable" ? "true": "false")" onclick="changeTab('payable')">
                        Payable
                    </a>
                </li>
                <li class="nav-item" style="width: 33.4%; text-align:center;">
                    <a class="nav-link" id="procTab" data-toggle="pill" href="#receivableTabContent" role="tab" aria-controls="receivableTabContent" aria-selected="@(Model.SelectedTab == "receivable" ? "true": "false")" onclick="changeTab('receivable')">
                        Receivable
                    </a>
                </li>
            </ul>

            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show" id="allTabContent" role="tabpanel" aria-labelledby="allTab" style="display:@(Model.SelectedTab == "payment" ? "block": "none")">
                    <div class="container">
                        @{await Html.RenderPartialAsync("AccountingTable", Model.Payments);}
                    </div>
                </div>
                <div class="tab-pane fade show" id="payableTabContent" role="tabpanel" aria-labelledby="allTab" style="display:@(Model.SelectedTab == "payable" ? "block": "none")">
                    <div class="container">
                        @{await Html.RenderPartialAsync("PayableTable", Model.Payables);}
                    </div>
                </div>
                <div class="tab-pane fade show" id="receivableTabContent" role="tabpanel" aria-labelledby="allTab" style="display:@(Model.SelectedTab == "receivable" ? "block": "none")">
                    <div class="container">
                        @{await Html.RenderPartialAsync("ReceivableTable", Model.Receivables);}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 text-center justify-content-center" id="filter">
            <div id="payment-filter" class="filer-data" style="display:@(Model.SelectedTab == "payment" ? "block": "none")">
                @{await Html.RenderPartialAsync("Filter", Model.PaymentFilters);}
                <input class="filter-data" type="button" value="Clear" onclick="refreshFilter(@JsonConvert.SerializeObject("payment"))">
            </div>
            <div id="receivable-filter" class="filer-data" style="display:@(Model.SelectedTab == "receivable" ? "block": "none")">
                @{await Html.RenderPartialAsync("Filter", Model.ReceivableFilters);}
                <input class="filter-data" type="button" value="Clear" onclick="refreshFilter(@JsonConvert.SerializeObject("receivable"))">
            </div>
            <div id="payable-filter" class="filer-data" style="display:@(Model.SelectedTab == "payable" ? "block": "none")">
                @{await Html.RenderPartialAsync("Filter", Model.PayableFilters);}
                <input class="filter-data" type="button" value="Clear" onclick="refreshFilter(@JsonConvert.SerializeObject("payable"))">
            </div>
            <div class="row justify-content-center elements">
                <button class="btn btn-primary">GENERATE GRAPH</button>
            </div>
        </div>

        <!-- Modal for filter in mobile mode-->
        <div class="modal fade" id="filterModal" tabindex="-1" role="dialog" aria-labelledby="filterModalTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="filterModalTitle">FILTER</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="modal-filter">
                        <div id="payment-filter" class="filer-data" style="display:@(Model.SelectedTab == "payment" ? "block": "none")">
                            @{await Html.RenderPartialAsync("Filter", Model.PaymentFilters);}
                            <input class="filter-data" type="button" value="Clear" onclick="refreshFilter(@JsonConvert.SerializeObject("payment"))">
                        </div>
                        <div id="receivable-filter" class="filer-data" style="display:@(Model.SelectedTab == "receivable" ? "block": "none")">
                            @{await Html.RenderPartialAsync("Filter", Model.ReceivableFilters);}
                            <input class="filter-data" type="button" value="Clear" onclick="refreshFilter(@JsonConvert.SerializeObject("receivable"))">
                        </div>
                        <div id="payable-filter" class="filer-data" style="display:@(Model.SelectedTab == "payable" ? "block": "none")">
                            @{await Html.RenderPartialAsync("Filter", Model.PayableFilters);}
                            <input class="filter-data" type="button" value="Clear" onclick="refreshFilter(@JsonConvert.SerializeObject("payable"))">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Filter</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>