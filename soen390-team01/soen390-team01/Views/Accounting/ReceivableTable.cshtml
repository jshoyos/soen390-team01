@using Newtonsoft.Json
@using soen390_team01.Data
@model List<soen390_team01.Data.Entities.Payment>

<table class="container" id="receivableTableCsv" aria-label="rt">
    <tr class="row pt-4 pb-4 h-100 text-center">
        <th class="col" scope="col">ID</th>
        <th class="col" scope="col">Status</th>
        <th class="col" scope="col">Value</th>
        <th class="col" scope="col">Added</th>
        <th class="col" scope="col">Updated</th>
    </tr>
    @foreach (var rec in Model)
    {
        <tr class="row pt-4 pb-4 h-100 text-center">
            <td class="col">@rec.PaymentId</td>
            <td class="col">@rec.State</td>
            <td class="col">@rec.Amount</td>
            <td class="col">@rec.Added.DateTimeLocalString()</td>
            <td class="col">@rec.Updated.DateTimeLocalString()</td>
        </tr>
    }
</table>