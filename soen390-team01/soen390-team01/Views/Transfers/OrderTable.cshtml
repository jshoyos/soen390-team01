@using soen390_team01.Data
@model List<soen390_team01.Data.Entities.Order>

<table class="container" id="orderTableCsv" aria-label="ot">
    <tr class="row pt-4 pb-4 h-100 text-center">
        <th class="col" scope="col">ID</th>
        <th class="col" scope="col">State</th>
        <th class="col" scope="col">Customer</th>
        <th class="col" scope="col">Added</th>
        <th class="col" scope="col">Updated</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr class="row pt-4 pb-4 h-100 text-center">
            <td class="col">@order.OrderId</td>
            <td class="col">@order.State</td>
            <td class="col">@order.Customer.Name</td>
            <td class="col">@order.Added.DateTimeLocalString()</td>
            <td class="col">@order.Updated.DateTimeLocalString()</td>
        </tr>
    }
</table>